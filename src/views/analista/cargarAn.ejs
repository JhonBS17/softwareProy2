<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="img/iconEmp.jpg">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!-- Font Awesome  -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/cargarA.css">
    <title>AS Colombia</title>
</head>

<body>
    <div class="row">
        <div class="col-1">
            <div id="mySidenav" class="show sidenav text-center ">
                <a href="javascript:void(0)" class="closebtn  " onclick="closeNav()">&#9776;</a>
                <div class="myItem">
                    <h4 style="padding-bottom: 30px; color: black;"><b><%= nombre %></b></h4>
                </div>
                <div id="divTextNav" class="container text-center myItem">
                    <a href="/analista/principal"><button type="button" class="btn btn-dark btn-block">Muestras
                            Asignadas</button></a>
                    <a href="/analista/resultados"><button type="button" class="btn btn-dark btn-block">Recopilar
                            Informes</button></a>
                    <a href="/analista/updateProfile"><button type="button" class="btn btn-dark btn-block">Editar
                            Perfil</button></a>
                    <a href="/index/logout"><button type="button" class="btn btn-danger btn-block">Cerrar
                            Sesión</button></a>
                </div>
            </div>
            <a style="cursor:pointer " id="openbtn" onclick="openNav()"> &#9776;</a>
        </div>
        <div class="col-11">
            <div style="margin-left: 5em;">
                <div class="mt-3 mb-2 container" id="divEditarF">
                    <div class=" mt-3 mb-2 text-center">
                        <% if (message.length > 0) {
                            var value = "danger"; 
                            if(message[0].includes("éxito")) {
                                value = "success";
                            }%>
                        <div class="alert alert-<%= value %> text-center container mt-3" id="message">
                            <%= message %>
                        </div>
                        <% } %>

                        <h2><strong>Muestras Asignadas</strong></h2>
                    </div><br>
                    <div id="mt-4 mb-4" style="width: 100%;">
                        <div class="panel panel-default">
                            <div class="panel-body">
                            </div>
                        </div>
                        <form action="/analista/cargarResultado/<%= datos[0].idMuestra %>" method="POST"
                            enctype="multipart/form-data">
                            <div class="mb-5">
                                <label for="inputIdIn" class="col-lg-1control-label"><b>ID Muestra:</b></label>
                                <input type="text" class="form-control" id="inputIdIn" name="idMuestra" disabled=true
                                    value="<%= datos[0].idMuestra %>">
                            </div>
                            <h5>Información del Agricultor</h5>
                            <hr>
                            <div class="mb-4">
                                <label for="inputIdIn2" class="col-lg-1control-label"><b>Cultivos actuales:</b></label>
                                <input type="text" class="form-control" id="inputIdIn2" disabled=true
                                    value="<%= datos[0].cultivosActAgricultor %>">
                            </div>
                            <div class="mb-4">
                                <label for="inputIdIn3" class="col-lg-1control-label"><b>Cultivos en un
                                        futuro:</b></label>
                                <input type="text" class="form-control" id="inputIdIn3" disabled=true
                                    value="<%= datos[0].cultivosFutAgricultor %>">
                            </div>
                            <div class="mb-5">
                                <label for="inputIdIn2" class="col-lg-1control-label"><b>Observaciones:</b></label>
                                <input type="text" class="form-control" id="inputIdIn2" disabled=true
                                    value="<%= datos[0].observacionAgricultor %>">
                            </div>
                            <h5>Subir Resultados</h5>
                            <hr>
                            <label for="validatedCustomFile" class="col-lg-1control-label"><b>ARCHIVO PDF:</b></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">PDF</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="inputPdf" accept=".pdf"
                                        aria-describedby="inputGroupFileAddon01" name="archivoPDF" required>
                                    <label id="labelPdf" class="custom-file-label" for="inputGroupFile01"></label>
                                </div>
                            </div>
                            <label for="validatedCustomFile" class="col-lg-1control-label"><b>ARCHIVO EXCEL:</b></label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">EXCEL</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input mb-3" id="inputExcel"
                                        accept="application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
                                        aria-describedby="inputGroupFileAddon01" name="archivoExcel" required>
                                    <label id="labelExcel" class="custom-file-label" for="inputGroupFile01"></label>
                                </div>
                            </div>
                            <br>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success mr-4">Confirmar</button>
                                <a href="/analista/principal"><button type="button"
                                        class="btn btn-danger ml-4">Descartar</button></a>
                            </div>
                        </form>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/js/jquery-3.5.1.min.js"></script>
<script src="/js/main.js"></script>
<script src="/js/verContrasena.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
    crossorigin="anonymous"></script>

<!-- Cambiar etiqueta al subir archivos -->

<script type="text/javascript">
    $(function () {
        $("#inputPdf").on('change', function (event) {
            var file = event.target.files[0];
            if (file.size >= 2 * 1024 * 1024) {
                Swal.fire('Error!', 'El archivo debe tener un tamaño máximo de 2 MB', 'warning');
                $("#inputPdf").val('')
                $('#labelPdf').html('');

                return;
            }

            if (!(file.name.split('.').slice(-1)[0].toLowerCase() == 'pdf')) {
                Swal.fire('Error!', 'El archivo debe ser de tipo PDF', 'warning');
                $("#inputPdf").val('')
                $('#labelPdf').html('');
                return;
            }

            $('#labelPdf').html(file.name);
        });
    });

    $(function () {
        $("#inputExcel").on('change', function (event) {
            var file = event.target.files[0];
            if (file.size >= 2 * 1024 * 1024) {
                Swal.fire('Error!', 'El archivo debe tener un tamaño máximo de 2 MB', 'warning');
                $("#inputExcel").val('');
                $('#labelExcel').html('');

                return;
            }

            var extension = file.name.split('.').slice(-1)[0].toLowerCase();
            if (!(extension == 'xlsx') && !(extension == 'xls')) {
                Swal.fire('Error!', 'El archivo debe ser de tipo XLSX o XLS', 'warning');
                $("#inputExcel").val('');
                $('#labelExcel').html('');
                return;
            }

            $('#labelExcel').html(file.name);
        });
    });
</script>

</html>