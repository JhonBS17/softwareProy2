    <link rel="stylesheet" href="/css/recContra1.css">
    <title>RecuperarContra</title>
</head>

<body>
    <% if (message.length > 0) { %>
    <div class="alert alert-success container text-center mt-3" style="width: 400px;">
        <%= message %>
    </div>
    <% } %>
    <div class="container mt-5" id="divContra">
        <form style="width: 320px;" class="mt-4 container" method="POST" action="/index/createCode">
            <div class="text-center mt-3 mb-4">
                <h3 class="mb-4"><b>Recuperar Contraseña</b></h3>
                <h6>Ingrese el correo electronico para recuperar su contraseña.</h6>
            </div>
            <div class="form-group" id="divCorreo">
                <label for="exampleInputEmail1">Correo Electrónico</label>
                <input type="email" class="form-control" id="correo" placeholder="ejemplo@correo.com"
                    name="correo_Agricultor">
            </div>
            <div class="text-center mt-4"><button class="btn btn-success">Enviar</button></div>
            <br><br>
        </form>
    </div>
    <br>
</body>

